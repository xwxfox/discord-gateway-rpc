{
    "$schema": "https://turborepo.dev/schema.json",
    "tasks": {
        "build": {
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^typecheck"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
